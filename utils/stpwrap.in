import fileinput
from subprocess import Popen, PIPE, STDOUT

query = ""
bvs = []
for line in fileinput.input():
    if not line.strip():
        continue
    elif ";" in line.strip()[0]:
        continue
    elif "set-option" in line:
        continue
    elif "get-value" in line:
        # e.g. (get-value (a1) )
        l = line.split(" ")[1].strip("(").strip(")")
        bvs.append(l)
        continue
    query += line

p = None
if len(bvs):
  p = Popen(["stp", "--SMTLIB2", "-p"], stdout=PIPE, stdin=PIPE, stderr=STDOUT)    
else:
  p = Popen(["stp", "--SMTLIB2"], stdout=PIPE, stdin=PIPE, stderr=STDOUT)    
stp_stdout = p.communicate(input=query)[0]
result = stp_stdout.decode()

models = {}
for line in result.split("\n"):
  if not line.strip():
      continue
  elif "ASSERT" in line.strip():
      # e.g. ASSERT( loc_6_2 = 0x00000002 );
      l = line.split(" ")
      bv = l[1]
      if not bv in bvs:
          continue
      val = l[3]
      if "0x" in val or "0b" in val:
          val = "#" + val[1:]
      res = "((" + bv + " " + val + "))"
      models[bv] = res
  else:
      # sat/unsat/unknown
      print line,

print
for bv in bvs:
    print models[bv]
