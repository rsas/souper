; REQUIRES: solver, solver-model, synthesis

; RUN: %souper-check %solver -infer-rhs -souper-infer-inst -souper-synthesis-ignore-cost -souper-synthesis-comps=const,xor,and,add %s > %t1
; RUN: FileCheck %s < %t1

; CHECK:      %4:i16 = {{(xor|and)}} %0, %2
; CHECK-NEXT: %5:i16 = {{(and|xor)}} %2, %4
; CHECK-NEXT: result %5

; Isolate the rightmost 0-bit
%0:i16 = var
%1:i16 = xor %0, -1
%2:i16 = add %0, 1
%3:i16 = and %1, %2
infer %3
